<h1>Listing players</h1>

<table>
  <tr>
    <th>Match</th>
    <th>Name</th>
    <th>Tee</th>
	<th colspan="3">&nbsp;</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= h Match.find(player.match_id).course.name %> - <%= h Match.find(player.match_id).date_hour_match %></td>
    <td><%= h player.user.name %></td>
    <td><%= h player.tee.barras %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Delete', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New player', new_player_path %>