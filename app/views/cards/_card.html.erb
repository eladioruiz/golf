                  <% form_for(@card, :html => { :id =>'form_main', :class => "cmxform"}) do |f| %>
                    <%= f.error_messages %>

                    <fieldset>
                      <legend>Datos principales</legend>
                      <ol>
                        <li>
                          <ul class="ul-form">
                            <li class="li-label">
                              <%= f.label "Partido" %>
                            </li>
                            <li class="li-field" style="width: 730px;">
                              <%=h @card.match.description %>
                            </li>
                          </ul>
                        </li>
                        <li>
                          <ul class="ul-form">
                            <div class="pair-form">
                              <li class="li-label">
                                <%= f.label "Jugador" %>
                              </li>
                              <li class="li-field-column">
                                <%=h @card.player.user.name %>
                              </li>
                            </div>
                            <div class="pair-form" style="width:500px;">
                              <li class="li-label">
                                <%= f.label "Golpes :" %>
                              </li>
                              <li class="li-field-column" style="width:300px;">
                                <%= @card.strokes_total -%> (total) = <%= @card.strokes_first_9 -%> (9 primeros) + <%= @card.strokes_second_9  -%> (9 segundos)<br>
                              </li>
                            </div>
                          </ul>
                        </li>
                      </ol>
                    </fieldset>

                    <fieldset>
                      <legend>Tarjeta/Golpes</legend>

<style>
  .stroke_edit {
    font-size: 11px;
    text-align: center;
  }

  .putt_edit {
    font-size: 11px;
    text-align: center;
  }
</style>

                  <p>
                  <table border="1" cellpadding="0" cellspacing="0" class="card" >
                    <tr>
                      <th width="250px">HOYOS</th>
                      <% @holes.each do |hole| %>
                        <% if hole.number==10 then %>
                            <th>1st 9</th>
                        <% end %>
                        <th width="30px"><%= hole.number %></th>
                      <% end %>
                      <th>2nd 9</th>
                      <th>Total</th>
                    </tr>
                    <tr class="card_info">
                      <td class="card_info_leyend">(rojas)&nbsp;<BR>(amarillas)&nbsp;<BR>(azules)&nbsp;<BR>(blancas)&nbsp;<BR>PAR&nbsp;<BR>HANDICAP&nbsp;</td>
                      <% @holes.each do |hole| %>
                  <% if hole.number==10 then %>
                      <td>&nbsp;</td>
                  <% end %>
                      <td>
                        <%= render :partial => 'layouts/hole_info', :locals => {:hole => hole}%>
                      </td>
                      <% end %>
                      <td>&nbsp;</td>
                      <td>&nbsp;</td>
                    </tr>

                    <% player = @card.player %>
                    <tr class="card_player">
                      <td class="card_player_name"><%= player.user.name %> (HCP: <%= format_nil(player.handicap,'-') -%>)</td>
                      <%  hole_number=1
                          f.fields_for :card_strokes do |detail_form| 
                          
                          if hole_number>1 then %>
                            </td>
                      <%  end
                          if hole_number==10 then %>
                            <td class="card_player_info_total" >
                              &nbsp;
                            </td>
                      <%  end %>
                        <td class="card_player_info" >
                          <%= render :partial => 'edit_card', :locals => {:detail_form => detail_form, :hole_number => hole_number} %>
                      <%    hole_number += 1
                          end %>
                    </tr>

                  </table>


                    </fieldset>

                      <% end %>
