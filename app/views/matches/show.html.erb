<h1>Show match</h1>

<p>
  <b>Course:</b>
  <%=h @match.course.name %>
</p>

<p>
  <b>Date:</b>
  <%=h @match.date_hour_match %>
</p>

<p>
  <b>Holes Played:</b>
  <%=h @match.holes %>
</p>

<%if @numplayers>0%>
  <hr>
  <table>
    <tr>
      <th>Name</th>
      <th>Handicap</th>
      <th>Tee</th>
	  <th>&nbsp;</th>
    </tr>

    <% @match.players.each do |detail| %>
      <tr>
        <td><%=h detail.user.name %></td>
		<td><%=h detail.user.handicap %></td>
		<td><%=h detail.tee.barras %></td>
		<td>
			<% if !detail.has_card? %>
				<a class="new_card" href="#">New Card</a>
			<% else %>
				<a class="edit_card" href="#">Edit Card</a>
			<% end %>
	&nbsp;&nbsp;&nbsp;
		</td>
      </tr>
    <% end %>
  </table>
<%end%>  

<%= link_to 'Edit', edit_match_path(@match) %> |
<%= link_to 'Back', matches_path %>