<h1>Detalle Partido</h1> <%= @audit_controller %>

<p>
  <b>Course:</b>
  <%=h @match.course.name %>
</p>

<p>
  <b>Date:</b>
  <%=h @match.date_hour_match %>
</p>

<p>
  <b>Holes Played:</b>
  <%=h @match.holes %>
</p>

<%  if @players.length > 0 %>
  <hr>
  <table>
    <tr>
      <th>Name</th>
      <th>Handicap</th>
      <th>Tee</th>
      <th>&nbsp;</th>
    </tr>

    <% @players.each do |detail| %>
      <tr>
        <td><%=h detail.user.name %></td>
	<td><%=h detail.user.handicap %></td>
	<td><%=h detail.tee.barras %></td>
	<td><%= link_to_card(detail) %>&nbsp;&nbsp;&nbsp;
            <%= link_to_remove_card(detail) %>&nbsp;&nbsp;&nbsp;
            <% if detail.has_card? then %>
              <%= link_to 'View Card', print_card_path(detail.card) %> </td>
            <% end %>
      </tr>
    <% end %>
  </table>
<%end%>  

<%= link_to 'View Card', print_match_path(@match) %> |
<%= link_to 'Edit', edit_match_path(@match) %> |
<%= link_to 'Back', matches_path %>