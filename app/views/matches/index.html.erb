<script type="text/javascript">
  $(function() {
    $("button, input:submit, a", ".demo").button();

    $("a",".demo").click(function() { return true; });
  });
</script>


<style>
  #header_info {

  }

  #course_select {
    position: relative;
    top: 0px;
    left: 50px;
    font-size: 12px;
  }
</style>


<h1>Partidos</h1>
<div id="course_select">
  <div class="ui-widget">
    <label>Campo: </label>
    <select>
      <option value="0" selected>Todos</option>
      <%
        @courses.each do |course|
      %>
          <option value="<%= course.id %>"><%= course.name %></option>
      <%
        end
      %>
    </select>
  </div>
</div>

<div class="demo">

  <a href="#">Todos</a>
  <a href="matches/lastmatches">10 Últimos</a>
  <a href="matches/bestmatches">10 Mejores</a>
  <a href="matches/lastmonth">Último Mes</a>
  <a href="#">Personalizado</a>

  <p></p>

  <table>
    <tr>
      <th>Course</th>
      <th>Date</th>
      <th>Holes</th>
      <th colspan="3">&nbsp;</th>
    </tr>

    <%= will_paginate @matches %>
    <% @matches.each do |match| %>
      <tr>
        <td><%=h match.course.name %></td>
        <td><%=h format_date(match.date_hour_match) %></td>
        <td><%=h match.holes %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Delete', match, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>

</div> <!-- end: demo -->

<br />

<%= link_to 'New match', new_match_path %>