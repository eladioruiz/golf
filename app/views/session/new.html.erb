<div id="login_box">
  <% form_tag session_path do -%>
    <p><label for="login" class="text_label">Login</label>
    <%= text_field_tag 'login' %></p>

    <p><label for="password">Password</label>
    <%= password_field_tag 'password' %></p>

    <p><%= submit_tag 'Log in' %></p>
  <% end -%>
</div>